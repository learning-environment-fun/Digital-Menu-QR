<div id="item-listing-page" class="app-page">
    <!-- Image of the meal -->
    <div class="item-image" style="background-image: url('<%= cl_image_path @item.image %>')">
        <div class="item-backicon">
            <%= link_to ' <i class="fas fa-long-arrow-alt-left"></i>'.html_safe, homepage_path %>

        </div>
    </div>
    <!-- Description of the meal -->
    <div class="container-wrapper">
        <%= button_to 'sign me out', destroy_user_session_path, method: :delete %>
        <div class="item-details">
            <div class="item-shoppingcard">
                <!-- <p>1</p> -->
                <i class="fas fa-shopping-cart"></i>
            </div>
            <h1>
                <%= @item.name %>
            </h1>
            <p>
                <%= @item.description %>
            </p>
        </div>
        <!-- Amount of the meal -->

        <div class="item-amount-buttons">
            <div class="item-amount">
                <div class="item-amount-smaller">
                    <p>-</p>
                </div>
                <div class="item-amount-display">
                    <p>1</p>
                </div>
                <div class="item-amount-greater">
                    <p>+</p>
                </div>
            </div>
            <div class="item-price">
                <h2>
                    <span id="price"><%=@item.price %></span> â‚¬</h2>
            </div>
        </div>
        <!-- order menu -->
        <hr class="item-hr mt-20">
        <div class="item-menu" data-item-id="<%= @item.id %>" data-item-name="<%= @item.name %>"
            data-item-price="<%= @item.price %>">
            <button class="commit-to-cart-button btn btn-primary">Add to Basket</button>
            <%= link_to 'Review Order', cart_path, class:"btn btn-primary"%>
        </div>
    </div>
</div>