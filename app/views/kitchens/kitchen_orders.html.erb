<!-- Kitchen Content -->
<div class="kitchen-container">
    <div class="kitchen-order-menu-section">
        <!--         <p>Tables:</p> -->
        <br>
        <div class="kitchen-order-list">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <!--  order Tab -->
                <% @tables.each do |table| %>
                <!--  End order Tab -->
                <!--  order Tab -->
                <li class="nav-item">
                    <a class="nav-link" id="order2" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Table <%= table.table_number %></a>
                </li>
                <% end %>
                <!--  End order Tab -->
            </ul>
        </div>
    </div>
    <div class="kitchen-order-actual-section">
        <!--   order Tab content-->
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="order1" role="tabpanel" aria-labelledby="pills-home-tab">
                <!--  content  -->
                <h3>Orders</h3>
                <% Table.last(5).each do |table| %>
                    <% table.orders.each do |order| %>
                        <br>
                        <%= render "kitchen_order_show", order: order  %>
                    <% end %>
                <% end %>

                <div class="card">
                    <div class="card-header">
                        <strong>Order 1</strong>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Grilled Sea Bream; Grean Bean Salad</h5>
                        <!--                         <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
 -->
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-header">
                        <strong>Order 2</strong>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Pizza Hawaii; Beer</h5>
                        <!--                         <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
 -->
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-header">
                        <strong>Order 3</strong>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Red Wine; Mushroom Risotto</h5>
                        <!--                         <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
 -->
                    </div>
                </div>
                <!-- DELETE / MARK AS SERVED BUTTONS -->
                <div class="kitchen-serve-buttons">
                    <a class="red-delete-kitchen" href="#"> Delete Order</a>
                    <a class="mark-served-kitchen" href="">Mark as Served</a>
                </div>
                <!-- END OF DELETE / MARK AS SERVED BUTTONS -->
