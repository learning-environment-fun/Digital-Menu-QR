<!-- (1) navigate to kitchen_order_show partial
  <%#= render "kitchen_order_show",
 (2) transfer order data
  order: order  %> -->
<div class="card table-order-card" data-table-id="<%= order.table.id %>">
    <div class="card-header">
        <div>
            <strong>Order</strong>
        </div>
        <div>
            <div class="kitchen-serve-buttons">
                <a class="btn btn-warning " href="#"> Delete Order</a>
                <a class="btn btn-success btn-raised" href="">Mark as Served</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title"></h5>

        <div class="d-flex">
            <div data-order-id='<%= order.id %>'>
                <% order.order_items.each do |orderitem| %>
                <ul>
                    <li>
                        <%= orderitem.item.name%> x <%= orderitem.quantity %></p>
                    </li>
                </ul>
                <% end %>

                <%= link_to 'Mark as ready', { order_id: order.id, kitchen_status: 'ready' }, { controller: "orders", action: "patch", method: :patch, remote: true, class: "ready btn btn-primary btn-raised" } %>
                <%= link_to 'Mark as served', { order_id: order.id, kitchen_status: 'served' }, { controller: "orders", action: "patch", method: :patch, remote: true, class: "served btn btn-primary" } %>
                <%= link_to 'Cancel', { order_id: order.id, kitchen_status: 'cancelled' }, { controller: "orders", action: "patch", method: :patch, remote: true, class: "cancelled btn btn-warning" } %>
            </div>
            <div class="order-data" data-order-id='<%= order.id %>'>
                <p>Kitchen status: <span class="kitchen-status"><%= order.kitchen_status %></span></p>
                <p>Transaction status: <span class="transaction-status"><%= order.transaction_status %></span></p>
            </div>
        </div>
    </div>
</div>